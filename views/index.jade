extends layout

block body
  div#login-main
    div.bg
      div.login-header
        p.header-my My
        p.header-am Achievements

      form
        div.form-group
          label(for='username') 用户名
          input.form-control#username(type='text')
        div.form-group
          label(for='password') 密码
          input.form-control#password(type='password')
        div.login-btn
          button.btn.btn-success(type='submit') 登录
  script(src='js/app.js')
