div#teacher-view
  div.page-header.text-center
    h1 作业发布
  div.col-md-4.col-md-offset-4#homework-info
    form
      div.form-group
        label(for="homework-name") 作业名称
        input.form-control#homework-name(type='text')
      div.form-group
        label(for='homework-link') 作业链接
        input.form-control#homework-link(type='text')
      div.form-group
        label(for='homework-startTime') 开始时间
        input.form-control#homework-startTime(type='text')
      div.form-group
        label(for='homework-endTime') 结束时间
        input.form-control#homework-endTime(type='text')
      button.btn.btn-primary(type='submit') 发布

